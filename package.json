{
  "name": "@curriculum-advantage/coconut",
  "description": "Utility library for Cocos2d-html5 that makes it easier to create HTML games.",
  "publisher": "Curriculum Advantage",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/curriculum-advantage/coconut"
  },
  "keywords": [
    "cocos",
    "cocos2d-html5",
    "cocos2d-x",
    "cocos2d-js",
    "game-development",
    "html-games",
    "html5",
    "canvas",
    "javascript"
  ],
  "scripts": {
    "clean": "cross-env rimraf dist",
    "lint": "cross-env eslint --ext .js,.ts src",
    "types": "cross-env tsc",
    "types:watch": "cross-env npm run types -- --watch",
    "test": "cross-env jest --passWithNoTests",
    "test:watch": "cross-env jest --passWithNoTests --watch --notify",
    "test:coverage": "cross-env jest --coverage",
    "config": "cross-env webpack --config tools/webpack/webpack.config.ts",
    "bundle": "cross-env npm run config -- --mode production",
    "dev": "cross-env npm run config -- --mode development --watch --progress --display-error-details",
    "prepare": "cross-env npm run clean && npm run bundle",
    "convertMathJaxJson": "cross-env node src/lib/jsonConversion/jsonConversion.js data/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix src/",
      "tsc --noEmit src/",
      "jest --bail --findRelatedTests",
      "git add"
    ]
  },
  "dependencies": {
    "core-js": "^2.6.9",
    "detect-browser": "^4.7.0",
    "howler": "^2.1.2",
    "is_js": "^0.9.0",
    "lodash": "^4.17.15",
    "prando": "^5.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.9",
    "@types/lodash": "^4.14.121",
    "@types/node": "^11.9.5",
    "@types/webpack": "^4.4.25",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-lodash": "^3.3.4",
    "base64-to-image": "^1.0.2",
    "bluebird": "^3.5.5",
    "cross-env": "^6.0.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-airbnb-typescript": "^5.0.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^12.0.1",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.0",
    "lodash-webpack-plugin": "^0.11.5",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "eslint-comments",
      "jest",
      "promise",
      "unicorn"
    ],
    "extends": [
      "airbnb-typescript/base",
      "plugin:@typescript-eslint/recommended",
      "plugin:eslint-comments/recommended",
      "plugin:jest/recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended"
    ],
    "globals": {
      "cc": true,
      "ccui": true
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error",
            "assert"
          ]
        }
      ],
      "complexity": [
        "error",
        5
      ],
      "max-params": [
        "error",
        5
      ],
      "max-depth": [
        "error",
        4
      ],
      "max-statements": [
        "error",
        20
      ],
      "max-lines-per-function": [
        "error",
        50
      ],
      "max-classes-per-file": [
        "error",
        1
      ],
      "max-nested-callbacks": [
        "error",
        3
      ],
      "max-statements-per-line": [
        "error",
        {
          "max": 1
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ],
      "unicorn/expiring-todo-comments": "off"
    }
  },
  "jest": {
    "bail": true,
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|cur)$": "<rootDir>/src/lib/mocks/FileMock.js"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "useBuiltIns": "usage",
          "corejs": 2,
          "targets": {
            "ie": "11"
          }
        }
      ],
      "@babel/typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/proposal-object-rest-spread"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  }
}
